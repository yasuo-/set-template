root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
end_of_line = lf

[*.{java,xml}]
indent_size = 4

[*.{rb,erb}]
indent_size = 2

[*.{html,js,css,scss,jsx}]
indent_size = 2

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
